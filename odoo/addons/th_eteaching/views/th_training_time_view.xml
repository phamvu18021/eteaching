<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="th_training_time_tree_view" model="ir.ui.view">
        <field name="name">th.training.time.tree.view</field>
        <field name="model">th.training.time</field>
        <field name="arch" type="xml">
            <tree editable="top">
                <field name="name"/>
                <field name="th_code"/>
            </tree>
        </field>
    </record>

    <record id="th_training_time_action" model="ir.actions.act_window">
        <field name="name">Thời gian đào tạo</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">th.training.time</field>
        <field name="view_mode">tree</field>
    </record>
</odoo>