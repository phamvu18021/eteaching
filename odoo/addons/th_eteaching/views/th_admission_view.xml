<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_th_admission_tree" model="ir.ui.view">
        <field name="name">th.place.tree</field>
        <field name="model">th.admission</field>
        <field name="arch" type="xml">
            <tree string="">
                <field name="name"/>
                <field name="th_school"/>
                <field name="th_places" widget="many2many_tags"/>
                <field name="th_major_combines" widget="many2many_tags"/>
                <field name="th_majors" widget="many2many_tags"/>
                <field name="th_objects" widget="many2many_tags"/>
                <field name="th_areas" widget="many2many_tags"/>
                <field name="th_methods" widget="many2many_tags"/>
                <field name="th_station" widget="many2many_tags"/>
                <field name="th_exam_location" widget="many2many_tags"/>
                <field name="th_target"/>
                <field name="th_training_channels" widget="many2many_tags"/>
                <field name="th_training_times" widget="many2many_tags"/>
                <field name="th_block_combines" widget="many2many_tags"/>
                <field name="th_deadline"/>
                <field name="th_point_rangers" widget="many2many_tags"/>
            </tree>
        </field>
    </record>

    <record id="view_th_admission_form" model="ir.ui.view">
        <field name="name">th.place.tree</field>
        <field name="model">th.admission</field>
        <field name="arch" type="xml">
            <form string="">
                <header>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <label for="name" string="Tiêu đề"/>
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="th_school"/>
                            <field name="th_major_combines" widget="many2many_tags"/>
                            <field name="th_majors" widget="many2many_tags"/>
                            <field name="th_objects" widget="many2many_tags"/>
                            <field name="th_areas" widget="many2many_tags"/>
                            <field name="th_methods" widget="many2many_tags"/>
                            <field name="th_station" widget="many2many_tags"/>
                            <field name="slug_url" attrs="{'invisible':[('idWordPress', '=', '0')]}" readonly="1" />
                            <field name="idWordPress" attrs="{'invisible':[('idWordPress', '=', '0')]}" readonly="1"/>
                        </group>
                        <group>
                            <field name="th_target"/>
                            <field name="th_exam_location" widget="many2many_tags"/>
                            <field name="th_training_channels" widget="many2many_tags"/>
                            <field name="th_training_times" widget="many2many_tags"/>
                            <field name="th_block_combines" widget="many2many_tags"/>
                            <field name="th_deadline"/>
                            <field name="th_places" widget="many2many_tags"/>
                            <field name="th_point_rangers" widget="many2many_tags"/>

                        </group>
                        <!--                        <notebook>-->
                        <!--                            <page string="Nội dung">-->
                        <!--                                <field name="th_content"/>-->
                        <!--                            </page>-->
                        <!--                        </notebook>-->
                    </group>
                    <button string="Tạo tin tuyển sinh WordPress mới" type="object" class="oe_highlight"
                            icon="fa-external-link-square" name="open_create_wordpress_link"
                            options="{'target': 'new'}"
                            attrs="{'invisible': [('slug_url', '!=', '0')]}"
                    />

                    <button string="Sửa tin tuyển sinh WordPress" type="object" class="btn-danger"
                            icon="fa-external-link-square" name="open_edit_wordpress_link"
                            options="{'target': 'new'}"
                            attrs="{'invisible': [('slug_url', '=', '0')]}"
                    />


                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>

            </form>
        </field>
    </record>

    <record id="th_admission_model_action" model="ir.actions.act_window">
        <field name="name">Tin tuyển sinh</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">th.admission</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>

