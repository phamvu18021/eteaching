<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_th_major_combine_tree" model="ir.ui.view">
        <field name="name">th.major.combine.tree</field>
        <field name="model">th.major.combine</field>
        <field name="arch" type="xml">
            <tree string="Views" editable="top">
                <field name="name"/>
                <field name="description"/>
                <field name="th_code"/>
            </tree>
        </field>
    </record>
    <record id="th_major_combine_model_action" model="ir.actions.act_window">
        <field name="name">Khối ngành</field>
        <field name="res_model">th.major.combine</field>
        <field name="view_mode">tree</field>
    </record>
</odoo>
